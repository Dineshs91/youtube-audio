{
    "manifest_version": 2,
    "name": "Youtube audio",
    "description": "Listen to audio on youtube",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["https://*.youtube.com/*"],
        "js": [
            "js/utils.js",
            "js/youtube.js"
        ],
        "run_at": "document_end"
    }],

    "background": {
        "scripts": ["js/background.js"]
    },

    "permissions": [
        "webNavigation",
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://*.googlevideo.com/"
    ]
}